<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="NotIntelNucStudio.WinUI3.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NotIntelNucStudio.WinUI3.Views"
    xmlns:controls="using:NotIntelNucStudio.WinUI3.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="OnPageLoaded">
    
    <Grid Background="#FF1A2332">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="40,30,40,20">
            <TextBlock 
                Text="Intel NUC Software Studio" 
                FontSize="28" 
                FontWeight="Light"
                Foreground="White"/>
            <TextBlock 
                Text="Manage your Intel NUC system settings" 
                FontSize="14" 
                Foreground="#FF8A9BA8"
                Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="40,20,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- LEDs Section -->
            <Border Grid.Column="0" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    Padding="30"
                    BorderBrush="#FF3A4A57"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <!-- Header with Button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE706;" FontSize="20" Foreground="#FFE6B800"/>
                            <TextBlock Text="LEDs" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1"
                               x:Name="LedsButton"
                               Content="Manage LEDs" 
                               Click="OnLedsClicked"
                               Background="#FF0078D4"
                               Foreground="White"
                               Padding="12,6"
                               CornerRadius="4"
                               BorderThickness="0"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    </Grid>
                    
                    <!-- NUC Device Views with Responsive Scaling -->
                    <ScrollViewer x:Name="NucScrollViewer" 
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  ZoomMode="Disabled"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  SizeChanged="NucScrollViewer_SizeChanged"
                                  Padding="5"
                                  MaxHeight="600">
                        <Grid x:Name="ResponsiveNucGrid" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Grid definitions will be set dynamically in code-behind for responsive behavior -->
                        
                        <!-- NUC device views with LED zones - Now using responsive sizing -->
                        <!-- Main NUC Front/Center View -->
                        <Border x:Name="FrontNucBorder"
                                Background="#FF1E2832" 
                                CornerRadius="6" 
                                Margin="8"
                                Padding="12"
                                Width="350" Height="350"
                                BorderBrush="#FF3A4A57"
                                BorderThickness="1">
                            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid>
                                    <!-- Base NUC device image -->
                                    <Image Source="ms-appx:///Assets/NucImages/nuc_front_base.png"
                                           Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    
                                    <!-- LED overlay using mask image -->
                                    <Image x:Name="MainFrontLedOverlayImage"
                                           Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                </Grid>
                            </Viewbox>
                        </Border>
                        
                        <!-- NUC Left Image-Based View -->
                        <Border x:Name="LeftNucBorder"
                                Background="#FF1E2832" 
                                CornerRadius="6" 
                                Margin="8"
                                Padding="12"
                                Width="350" Height="350"
                                BorderBrush="#FF3A4A57"
                                BorderThickness="1">
                            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid>
                                    <!-- Base NUC device image -->
                                    <Image Source="ms-appx:///Assets/NucImages/nuc_left_base.png"
                                           Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    
                                    <!-- LED overlay using mask image -->
                                    <Image x:Name="MainLeftLedOverlayImage"
                                           Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                </Grid>
                            </Viewbox>
                        </Border>
                        
                        <!-- NUC Right Image-Based View -->
                        <Border x:Name="RightNucBorder"
                                Background="#FF1E2832" 
                                CornerRadius="6" 
                                Margin="8"
                                Padding="12"
                                Width="350" Height="350"
                                BorderBrush="#FF3A4A57"
                                BorderThickness="1">
                            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid>
                                    <!-- Base NUC device image -->
                                    <Image Source="ms-appx:///Assets/NucImages/nuc_right_base.png"
                                           Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    
                                    <!-- LED overlay using mask image -->
                                    <Image x:Name="MainRightLedOverlayImage"
                                           Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                </Grid>
                            </Viewbox>
                        </Border>
                    </Grid>
                    </ScrollViewer>
                    
                    <!-- Effects Toggle -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                  Text="Effects:" 
                                  FontSize="13" 
                                  Foreground="#FF8A9BA8"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        
                        <ToggleSwitch Grid.Column="1" 
                                     x:Name="EffectsToggle"
                                     OnContent="ON" 
                                     OffContent="OFF"
                                     IsOn="False"
                                     Foreground="#FF8A9BA8"
                                     Toggled="OnEffectsToggled"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Arrow 1 -->
            <FontIcon Grid.Column="1" 
                     Glyph="&#xE76C;" 
                     FontSize="24" 
                     Foreground="#FF0078D4"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="20,0"/>
            
            <!-- Performance Section -->
            <Border Grid.Column="2" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    Padding="30"
                    BorderBrush="#FF3A4A57"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <!-- Header with Button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7C4;" FontSize="20" Foreground="#FF16C60C"/>
                            <TextBlock Text="Performance Mode" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1"
                               x:Name="PerformanceButton"
                               Content="Performance Settings" 
                               Click="OnPerformanceClicked"
                               Background="#FF16C60C"
                               Foreground="White"
                               Padding="12,6"
                               CornerRadius="4"
                               BorderThickness="0"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    </Grid>
                    
                    <!-- CPU Sub-Card -->
                    <Border Background="#FF1E2832" 
                            CornerRadius="6"
                            Padding="20"
                            BorderBrush="#FF2A3441"
                            BorderThickness="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="CPU" 
                                      FontSize="13" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Max Performance" 
                                      FontSize="11" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            
                            <!-- CPU Gauge -->
                            <controls:CircularGauge x:Name="MainCpuGauge"
                                                   Width="80" 
                                                   Height="80"
                                                   Value="45" 
                                                   Maximum="100"
                                                   Unit="%"
                                                   StrokeColor="#FFFF8C00"
                                                   ShowTemperature="True"
                                                   Temperature="45"
                                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fan Sub-Card -->
                    <Border Background="#FF1E2832" 
                            CornerRadius="6"
                            Padding="20"
                            BorderBrush="#FF2A3441"
                            BorderThickness="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Fan" 
                                      FontSize="13" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="FanModeText"
                                      Text="Balanced" 
                                      FontSize="11" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            
                            <!-- Fan Info -->
                            <StackPanel Spacing="6" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="12" Foreground="#FF8A9BA8"/>
                                    <TextBlock x:Name="CpuFanSpeedText" 
                                              Text="CPU Fan: -- RPM" 
                                              FontSize="10" 
                                              Foreground="#FF8A9BA8"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="12" Foreground="#FF8A9BA8"/>
                                    <TextBlock x:Name="SystemFan1SpeedText" 
                                              Text="System Fan 1: -- RPM" 
                                              FontSize="10" 
                                              Foreground="#FF8A9BA8"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="12" Foreground="#FF8A9BA8"/>
                                    <TextBlock x:Name="SystemFan2SpeedText" 
                                              Text="System Fan 2: -- RPM" 
                                              FontSize="10" 
                                              Foreground="#FF8A9BA8"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Arrow 2 -->
            <FontIcon Grid.Column="3" 
                     Glyph="&#xE76C;" 
                     FontSize="24" 
                     Foreground="#FF0078D4"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="20,0"/>
            
            <!-- System Monitor Section -->
            <Border Grid.Column="4" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    Padding="30"
                    BorderBrush="#FF3A4A57"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Header with Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7F4;" FontSize="20" Foreground="#FFFF8C00"/>
                            <TextBlock Text="System Monitor" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1"
                               x:Name="SystemMonitorButton"
                               Content="View System Status" 
                               Click="OnSystemMonitorClicked"
                               Background="#FFFF8C00"
                               Foreground="White"
                               Padding="12,6"
                               CornerRadius="4"
                               BorderThickness="0"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    </Grid>
                    
                    <!-- System Information Sub-Card -->
                    <Border Grid.Row="1" 
                            Background="#FF1E2832" 
                            CornerRadius="6"
                            Padding="20"
                            BorderBrush="#FF2A3441"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                        <StackPanel Spacing="6">
                            <TextBlock x:Name="SystemModelText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="SystemManufacturerText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="BiosVersionText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="SystemSkuText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="EmbeddedControllerText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="SystemVersionText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="BaseBoardVersionText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="CpuInfoText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="IgpuInfoText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock x:Name="DgpuInfoText" 
                                      Text="" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Performance Gauges - Responsive Flow Layout -->
                    <ScrollViewer x:Name="GaugesScrollViewer"
                                 Grid.Row="2"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 ZoomMode="Disabled"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Padding="5"
                                 SizeChanged="GaugesScrollViewer_SizeChanged">
                        <!-- Dynamic Grid that reconfigures based on available space -->
                        <Grid x:Name="ResponsiveGaugeGrid" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                            <!-- Grid definitions will be set dynamically in code-behind -->
                            
                            <!-- CPU Gauge Card -->
                            <Border x:Name="CpuGaugeBorder"
                                    Background="Transparent" 
                                    Width="160" Height="160"
                                    Margin="5">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="CPU" 
                                              Foreground="#FF8A9BA8"
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemCpuGauge"
                                                           Value="20" 
                                                           Maximum="100"
                                                           Unit=""
                                                           StrokeColor="#FFFF8C00"
                                                           ShowTemperature="True"
                                                           Temperature="70"
                                                           Width="110"
                                                           Height="110"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- dGPU Gauge Card -->
                            <Border x:Name="DgpuGaugeBorder"
                                    Background="Transparent" 
                                    Width="160" Height="160"
                                    Margin="5">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="dGPU" 
                                              Foreground="#FF8A9BA8"
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemGpuGauge"
                                                           Value="5" 
                                                           Maximum="100"
                                                           Unit=""
                                                           StrokeColor="#FF16C60C"
                                                           ShowTemperature="True"
                                                           Temperature="41"
                                                           Width="110"
                                                           Height="110"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Memory Gauge Card -->
                            <Border x:Name="MemoryGaugeBorder"
                                    Background="Transparent" 
                                    Width="160" Height="160"
                                    Margin="5">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Memory" 
                                              Foreground="#FF8A9BA8"
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemMemoryGauge"
                                                           Value="46" 
                                                           Maximum="100"
                                                           Unit=""
                                                           StrokeColor="#FF0078D4"
                                                           Width="110"
                                                           Height="110"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Storage Gauge Card -->
                            <Border x:Name="StorageGaugeBorder"
                                    Background="Transparent" 
                                    Width="160" Height="160"
                                    Margin="5">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Storage" 
                                              Foreground="#FF8A9BA8"
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemStorageGauge"
                                                           Value="92" 
                                                           Maximum="100"
                                                           Unit=""
                                                           StrokeColor="#FFFF8C00"
                                                           Width="110"
                                                           Height="110"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- System Temperature Gauge Card -->
                            <Border x:Name="SystemTempGaugeBorder"
                                    Background="Transparent" 
                                    Width="160" Height="160"
                                    Margin="5">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="System" 
                                              Foreground="#FF8A9BA8"
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemTempGauge"
                                                           Value="46" 
                                                           Maximum="100"
                                                           Unit="%"
                                                           StrokeColor="#FF16C60C"
                                                           ShowTemperature="True"
                                                           Temperature="46"
                                                           Width="110"
                                                           Height="110"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
