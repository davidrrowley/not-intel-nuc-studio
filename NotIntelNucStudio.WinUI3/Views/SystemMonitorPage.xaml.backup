<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="NotIntelNucStudio.WinUI3.Views.SystemMonitorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NotIntelNucStudio.WinUI3.Views"
    xmlns:controls="using:NotIntelNucStudio.WinUI3.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="#FF1A2332">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with back button -->
        <StackPanel Grid.Row="0" Margin="30,20,30,20" Orientation="Horizontal">
            <Button x:Name="BackButton"
                   Click="OnBackClicked"
                   Background="Transparent"
                   BorderThickness="0"
                   Margin="0,0,20,0">
                <FontIcon Glyph="&#xE72B;" FontSize="20" Foreground="#FF0EA5E9"/>
            </Button>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE950;" FontSize="24" Foreground="#FFFBBF24"/>
                    <TextBlock Text="System Monitor" 
                              FontSize="24" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <FontIcon Glyph="&#xE835;" FontSize="20" Foreground="#FF10B981" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Performance Gauges -->
            <Border Grid.Column="0" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    BorderBrush="#FF374151"
                    BorderThickness="1"
                    Padding="30"
                    Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,30">
                        <FontIcon Glyph="&#xE7C4;" FontSize="20" Foreground="#FFFBBF24"/>
                        <TextBlock Text="System Performance" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="White"/>
                    </StackPanel>
                    
                    <!-- Performance Gauges Grid -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- CPU -->
                        <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <controls:CircularGauge x:Name="CpuGauge"
                                                  Value="34"
                                                  StrokeColor="#FFFBBF24"
                                                  Width="140" Height="140"
                                                  Margin="0,0,0,15"/>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="CPU" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="Intel Core i9-11900K" FontSize="10" Foreground="#FF9CA3AF" HorizontalAlignment="Center"/>
                                <TextBlock Text="34°C" FontSize="12" Foreground="#FFFBBF24" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- dGPU -->
                        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <controls:CircularGauge x:Name="GpuGauge"
                                                  Value="0"
                                                  StrokeColor="#FFEF4444"
                                                  Width="140" Height="140"
                                                  Margin="0,0,0,15"/>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="dGPU" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="NVIDIA RTX 3060" FontSize="10" Foreground="#FF9CA3AF" HorizontalAlignment="Center"/>
                                <TextBlock Text="0°C" FontSize="12" Foreground="#FFEF4444" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Memory -->
                        <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <controls:CircularGauge x:Name="MemoryGauge"
                                                  Value="44"
                                                  StrokeColor="#FF0EA5E9"
                                                  Width="140" Height="140"
                                                  Margin="0,0,0,15"/>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Memory" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="7.1 GB / 16 GB" FontSize="10" Foreground="#FF9CA3AF" HorizontalAlignment="Center"/>
                                <TextBlock Text="44%" FontSize="12" Foreground="#FF0EA5E9" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Storage -->
                        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <controls:CircularGauge x:Name="StorageGauge"
                                                  Value="92"
                                                  StrokeColor="#FFFBBF24"
                                                  Width="140" Height="140"
                                                  Margin="0,0,0,15"/>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Storage" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="235 GB / 256 GB" FontSize="10" Foreground="#FF9CA3AF" HorizontalAlignment="Center"/>
                                <TextBlock Text="92%" FontSize="12" Foreground="#FFFBBF24" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Right Panel - System Information -->
            <StackPanel Grid.Column="1" Spacing="15">
                
                <!-- System Model -->
                <Border Background="#FF2A3441" 
                        CornerRadius="8"
                        BorderBrush="#FF374151"
                        BorderThickness="1"
                        Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,15">
                            <FontIcon Glyph="&#xE977;" FontSize="16" Foreground="#FF0EA5E9"/>
                            <TextBlock Text="System Model" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Model:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="NUC11TNHi9" FontSize="12" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="SKU:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="NUC11TNHi90000" FontSize="12" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Manufacturer:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="Intel®" FontSize="12" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Network Status -->
                <Border Background="#FF2A3441" 
                        CornerRadius="8"
                        BorderBrush="#FF374151"
                        BorderThickness="1"
                        Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,15">
                            <FontIcon Glyph="&#xE968;" FontSize="16" Foreground="#FF10B981"/>
                            <TextBlock Text="Network" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Ethernet:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="Connected" FontSize="12" Foreground="#FF10B981"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="WiFi:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="Disabled" FontSize="12" Foreground="#FF6B7280"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Speed:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="1 Gbps" FontSize="12" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- BIOS Information -->
                <Border Background="#FF2A3441" 
                        CornerRadius="8"
                        BorderBrush="#FF374151"
                        BorderThickness="1"
                        Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,15">
                            <FontIcon Glyph="&#xE7C4;" FontSize="16" Foreground="#FFFBBF24"/>
                            <TextBlock Text="System Firmware" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="BIOS:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="TNTGL579.037" FontSize="12" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Date:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="11/11/2024" FontSize="12" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="EC Ver:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="3.5" FontSize="12" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- System Status -->
                <Border Background="#FF2A3441" 
                        CornerRadius="8"
                        BorderBrush="#FF374151"
                        BorderThickness="1"
                        Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,15">
                            <FontIcon Glyph="&#xE950;" FontSize="16" Foreground="#FF10B981"/>
                            <TextBlock Text="System Status" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Uptime:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="2d 14h 32m" FontSize="12" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Health:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="Excellent" FontSize="12" Foreground="#FF10B981"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Power:" FontSize="12" Foreground="#FF9CA3AF" Width="80"/>
                                <TextBlock Text="Optimal" FontSize="12" Foreground="#FF10B981"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>
    </Grid>
</Page>
