<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="NucLedController.WinUI3.Views.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NucLedController.WinUI3.Views"
    xmlns:controls="using:NucLedController.WinUI3.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="#FF1A2332">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with back button -->
        <StackPanel Grid.Row="0" Margin="30,20,30,20" Orientation="Horizontal">
            <Button x:Name="BackButton"
                   Click="OnBackClicked"
                   Background="Transparent"
                   BorderThickness="0"
                   Margin="0,0,20,0">
                <FontIcon Glyph="&#xE72B;" FontSize="20" Foreground="#FF0EA5E9"/>
            </Button>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE7C4;" FontSize="24" Foreground="#FFFBBF24"/>
                    <TextBlock Text="Performance Mode" 
                              FontSize="24" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <FontIcon Glyph="&#xE76C;" FontSize="20" Foreground="#FF0EA5E9" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - CPU Performance -->
            <Border Grid.Column="0" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    BorderBrush="#FF374151"
                    BorderThickness="1"
                    Padding="20"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="CPU" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="Max Performance" 
                              FontSize="12" 
                              Foreground="#FF9CA3AF"
                              Margin="0,0,0,20"/>
                    
                    <!-- CPU Gauge -->
                    <controls:CircularGauge x:Name="CpuGauge"
                                          Value="21"
                                          Unit="°/°C"
                                          StrokeColor="{StaticResource SystemAccentColor}"
                                          HorizontalAlignment="Center"
                                          Margin="0,20"/>
                    
                    <!-- CPU Details -->
                    <StackPanel Spacing="10" Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE7C4;" FontSize="14" Foreground="#FF0EA5E9" Margin="0,0,8,0"/>
                            <TextBlock Text="CPU Fan: 1980 RPM" FontSize="12" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE7C4;" FontSize="14" Foreground="#FF0EA5E9" Margin="0,0,8,0"/>
                            <TextBlock Text="System Fan 1: 904 RPM" FontSize="12" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE7C4;" FontSize="14" Foreground="#FF0EA5E9" Margin="0,0,8,0"/>
                            <TextBlock Text="System Fan 2: 948 RPM" FontSize="12" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Center Panel - Fan Settings -->
            <Border Grid.Column="1" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    BorderBrush="#FF374151"
                    BorderThickness="1"
                    Padding="20"
                    Margin="10,0">
                <StackPanel>
                    <TextBlock Text="Fan" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="Balanced" 
                              FontSize="12" 
                              Foreground="#FF9CA3AF"
                              Margin="0,0,0,20"/>
                    
                    <!-- Performance Profiles -->
                    <StackPanel Spacing="15" Margin="0,0,0,30">
                        <RadioButton Content="Balanced" 
                                   IsChecked="True"
                                   Foreground="White"
                                   FontSize="14"/>
                        <RadioButton Content="Performance" 
                                   Foreground="White"
                                   FontSize="14"/>
                        <RadioButton Content="Quiet" 
                                   Foreground="White"
                                   FontSize="14"/>
                        <RadioButton Content="Custom" 
                                   Foreground="White"
                                   FontSize="14"/>
                    </StackPanel>
                    
                    <!-- CPU Settings -->
                    <StackPanel Spacing="15">
                        <TextBlock Text="CPU Speed" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="White"/>
                        <Slider Value="75" 
                               Maximum="100"
                               Foreground="#FF0EA5E9"
                               Background="#FF374151"/>
                        
                        <TextBlock Text="Fan Speed" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  Margin="0,15,0,0"/>
                        <Slider Value="60" 
                               Maximum="100"
                               Foreground="#FF0EA5E9"
                               Background="#FF374151"/>
                        
                        <TextBlock Text="Power Management" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  Margin="0,15,0,0"/>
                        <Slider Value="50" 
                               Maximum="100"
                               Foreground="#FF0EA5E9"
                               Background="#FF374151"/>
                    </StackPanel>
                    
                    <!-- Thermal Management -->
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Thermal Management" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>
                        <CheckBox Content="Auto thermal throttling" 
                                 IsChecked="True"
                                 Foreground="White"
                                 FontSize="12"/>
                        <CheckBox Content="Aggressive cooling" 
                                 Foreground="White"
                                 FontSize="12"
                                 Margin="0,5,0,0"/>
                        <CheckBox Content="Silent mode when idle" 
                                 IsChecked="True"
                                 Foreground="White"
                                 FontSize="12"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Right Panel - System Monitor -->
            <Border Grid.Column="2" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    BorderBrush="#FF374151"
                    BorderThickness="1"
                    Padding="20"
                    Margin="10,0,0,0">
                <StackPanel>
                    <!-- System Info Header -->
                    <StackPanel Spacing="5" Margin="0,0,0,20">
                        <TextBlock Text="System Model: NUC11TNHi9" FontSize="11" Foreground="White"/>
                        <TextBlock Text="System Manufacturer: Intel(R) Client Systems" FontSize="11" Foreground="White"/>
                        <TextBlock Text="BIOS Version: TNTGL579.037.2024.1111.1526" FontSize="11" Foreground="White"/>
                        <TextBlock Text="System SKU: NUC11TNHi90000" FontSize="11" Foreground="White"/>
                        <TextBlock Text="Embedded Controller Version: 3.5" FontSize="11" Foreground="White"/>
                        <TextBlock Text="System Version: M15091.401" FontSize="11" Foreground="White"/>
                        <TextBlock Text="Processor: Intel Core i9-11900K" FontSize="11" Foreground="White"/>
                        <TextBlock Text="Baseboard Version: M17026.401" FontSize="11" Foreground="White"/>
                        <TextBlock Text="CPU: 11th Gen Intel(R) Core(TM) i9-11900K @ 3.50GHz" FontSize="11" Foreground="White"/>
                        <TextBlock Text="GPU: Intel(R) UHD Graphics" FontSize="11" Foreground="White"/>
                        <TextBlock Text="dGPU: NVIDIA GeForce RTX 3060" FontSize="11" Foreground="White"/>
                    </StackPanel>
                    
                    <!-- Performance Gauges -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- CPU -->
                        <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="CPU" FontSize="12" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                            <controls:CircularGauge x:Name="CpuGaugeSmall"
                                                  Value="21"
                                                  StrokeColor="#FFFBBF24"
                                                  Width="80" Height="80"/>
                        </StackPanel>
                        
                        <!-- dGPU -->
                        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="dGPU" FontSize="12" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                            <controls:CircularGauge x:Name="GpuGauge"
                                                  Value="0"
                                                  StrokeColor="#FFEF4444"
                                                  Width="80" Height="80"/>
                        </StackPanel>
                        
                        <!-- Memory -->
                        <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="Memory" FontSize="12" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                            <controls:CircularGauge x:Name="MemoryGauge"
                                                  Value="44"
                                                  StrokeColor="#FF0EA5E9"
                                                  Width="80" Height="80"/>
                        </StackPanel>
                        
                        <!-- Storage -->
                        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="Storage" FontSize="12" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                            <controls:CircularGauge x:Name="StorageGauge"
                                                  Value="92"
                                                  StrokeColor="#FFFBBF24"
                                                  Width="80" Height="80"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
