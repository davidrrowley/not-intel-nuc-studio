<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="NucLedController.WinUI3.Views.LedsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NucLedController.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="#FF1A2332">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with back button -->
        <StackPanel Grid.Row="0" Margin="30,20,30,20" Orientation="Horizontal">
            <Button x:Name="BackButton"
                   Click="OnBackClicked"
                   Background="Transparent"
                   BorderThickness="0"
                   Margin="0,0,20,0">
                <FontIcon Glyph="&#xE72B;" FontSize="20" Foreground="#FF0EA5E9"/>
            </Button>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE706;" FontSize="24" Foreground="#FFFBBF24"/>
                    <TextBlock Text="LEDs" 
                              FontSize="24" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <FontIcon Glyph="&#xE76C;" FontSize="20" Foreground="#FF0EA5E9" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - NUC Views -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- NUC Profile Views -->
                <Grid Grid.Row="0" Margin="0,0,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Main NUC View (Top/Front) -->
                    <Border Grid.Row="0" 
                            Background="#FF2A3441" 
                            CornerRadius="8"
                            BorderBrush="#FF374151"
                            BorderThickness="1"
                            Padding="20">
                        <Grid>
                            <!-- NUC Outline -->
                            <Border Width="180" Height="180"
                                   Background="#FF1F2937"
                                   CornerRadius="8"
                                   BorderBrush="#FF4B5563"
                                   BorderThickness="2">
                                <Grid>
                                    <!-- Skull LED Zone -->
                                    <Border x:Name="SkullLed"
                                           Width="40" Height="40"
                                           Background="#FF374151"
                                           CornerRadius="20"
                                           BorderBrush="#FF6B7280"
                                           BorderThickness="2"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,30,0,0">
                                        <FontIcon Glyph="&#xE7C2;" FontSize="20" Foreground="#FF9CA3AF"/>
                                    </Border>
                                    
                                    <!-- Bottom Left LED -->
                                    <Ellipse x:Name="BottomLeftLed"
                                            Width="12" Height="12"
                                            Fill="#FF374151"
                                            Stroke="#FF6B7280"
                                            StrokeThickness="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Margin="25,0,0,25"/>
                                    
                                    <!-- Bottom Right LED -->
                                    <Ellipse x:Name="BottomRightLed"
                                            Width="12" Height="12"
                                            Fill="#FF374151"
                                            Stroke="#FF6B7280"
                                            StrokeThickness="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Margin="0,0,25,25"/>
                                    
                                    <!-- Front Bottom LED Strip -->
                                    <Rectangle x:Name="FrontBottomLed"
                                              Width="80" Height="4"
                                              Fill="#FF374151"
                                              RadiusX="2" RadiusY="2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              Margin="0,0,0,15"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Side Profile Views -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                        <!-- Side View 1 -->
                        <Border Background="#FF2A3441" 
                               CornerRadius="4"
                               BorderBrush="#FF374151"
                               BorderThickness="1"
                               Padding="15"
                               Width="80" Height="60">
                            <Border Background="#FF1F2937"
                                   CornerRadius="4"
                                   BorderBrush="#FF4B5563"
                                   BorderThickness="1">
                                <Rectangle x:Name="SideLed1"
                                          Width="40" Height="3"
                                          Fill="#FF374151"
                                          RadiusX="1" RadiusY="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Bottom"
                                          Margin="0,0,0,8"/>
                            </Border>
                        </Border>
                        
                        <!-- Side View 2 -->
                        <Border Background="#FF2A3441" 
                               CornerRadius="4"
                               BorderBrush="#FF374151"
                               BorderThickness="1"
                               Padding="15"
                               Width="80" Height="60">
                            <Border Background="#FF1F2937"
                                   CornerRadius="4"
                                   BorderBrush="#FF4B5563"
                                   BorderThickness="1">
                                <Rectangle x:Name="SideLed2"
                                          Width="40" Height="3"
                                          Fill="#FF374151"
                                          RadiusX="1" RadiusY="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Bottom"
                                          Margin="0,0,0,8"/>
                            </Border>
                        </Border>
                        
                        <!-- Side View 3 -->
                        <Border Background="#FF2A3441" 
                               CornerRadius="4"
                               BorderBrush="#FF374151"
                               BorderThickness="1"
                               Padding="15"
                               Width="80" Height="60">
                            <Border Background="#FF1F2937"
                                   CornerRadius="4"
                                   BorderBrush="#FF4B5563"
                                   BorderThickness="1">
                                <Rectangle x:Name="SideLed3"
                                          Width="40" Height="3"
                                          Fill="#FF374151"
                                          RadiusX="1" RadiusY="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Bottom"
                                          Margin="0,0,0,8"/>
                            </Border>
                        </Border>
                    </StackPanel>
                </Grid>
                
                <!-- LED Profile Selector -->
                <ComboBox Grid.Row="1"
                         x:Name="ProfileSelector"
                         Background="#FF2A3441"
                         Foreground="White"
                         BorderBrush="#FF374151"
                         Margin="0,0,20,10"
                         HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Default" IsSelected="True"/>
                    <ComboBoxItem Content="Gaming"/>
                    <ComboBoxItem Content="Work"/>
                    <ComboBoxItem Content="Custom"/>
                </ComboBox>
                
                <!-- Effects Toggle -->
                <StackPanel Grid.Row="2" Margin="0,0,20,0">
                    <TextBlock Text="Effects:" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <ToggleButton x:Name="EffectsToggle"
                                     Content="OFF"
                                     Click="OnEffectsToggled"
                                     Width="60" Height="30"
                                     Background="#FF4B5563"
                                     Foreground="White"
                                     BorderThickness="0"
                                     CornerRadius="15"/>
                        <ToggleButton Content="ON"
                                     Width="60" Height="30"
                                     Background="#FF0EA5E9"
                                     Foreground="White"
                                     BorderThickness="0"
                                     CornerRadius="15"
                                     IsChecked="False"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            <!-- Right Panel - Controls -->
            <ScrollViewer Grid.Column="1" Margin="20,0,0,0">
                <StackPanel Spacing="20">
                    
                    <!-- Connection Status -->
                    <Border Background="#FF2A3441" 
                            CornerRadius="8"
                            Padding="20"
                            BorderBrush="#FF374151"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Connection Status" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="ConnectionStatus"
                                      Text="Disconnected" 
                                      FontSize="14" 
                                      Foreground="#FFEF4444"
                                      Margin="0,0,0,15"/>
                            <Button x:Name="ConnectButton"
                                   Content="Connect to NUC"
                                   Click="OnConnectClicked"
                                   Background="#FF0EA5E9"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="15,8"
                                   CornerRadius="4"
                                   HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- LED Zone Controls -->
                    <Border Background="#FF2A3441" 
                            CornerRadius="8"
                            Padding="20"
                            BorderBrush="#FF374151"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="LED Zone Controls" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Skull Zone -->
                                <StackPanel Grid.Column="0" Grid.Row="0">
                                    <TextBlock Text="Skull Zone" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                    <Button Content="Set Red" 
                                           Click="OnSkullRedClicked" 
                                           Background="#FFEF4444"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="12,6"
                                           CornerRadius="4"
                                           HorizontalAlignment="Stretch"/>
                                </StackPanel>
                                
                                <!-- Bottom Left Zone -->
                                <StackPanel Grid.Column="1" Grid.Row="0">
                                    <TextBlock Text="Bottom Left" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                    <Button Content="Set Green" 
                                           Click="OnBottomLeftGreenClicked" 
                                           Background="#FF10B981"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="12,6"
                                           CornerRadius="4"
                                           HorizontalAlignment="Stretch"/>
                                </StackPanel>
                                
                                <!-- Bottom Right Zone -->
                                <StackPanel Grid.Column="0" Grid.Row="2">
                                    <TextBlock Text="Bottom Right" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                    <Button Content="Set Blue" 
                                           Click="OnBottomRightBlueClicked" 
                                           Background="#FF3B82F6"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="12,6"
                                           CornerRadius="4"
                                           HorizontalAlignment="Stretch"/>
                                </StackPanel>
                                
                                <!-- Front Bottom Zone -->
                                <StackPanel Grid.Column="1" Grid.Row="2">
                                    <TextBlock Text="Front Bottom" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                    <Button Content="Set Yellow" 
                                           Click="OnFrontBottomYellowClicked" 
                                           Background="#FFF59E0B"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="12,6"
                                           CornerRadius="4"
                                           HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Global Controls -->
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
                                <Button Content="All White" 
                                       Click="OnAllWhiteClicked" 
                                       Background="#FF6B7280"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       CornerRadius="4"/>
                                <Button Content="Turn Off" 
                                       Click="OnTurnOffClicked" 
                                       Background="#FF4B5563"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       CornerRadius="4"/>
                                <Button Content="Turn On" 
                                       Click="OnTurnOnClicked" 
                                       Background="#FF0EA5E9"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       CornerRadius="4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
