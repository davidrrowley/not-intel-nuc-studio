<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="NucLedController.WinUI3.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NucLedController.WinUI3.Views"
    xmlns:controls="using:NucLedController.WinUI3.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="#FF1A2332">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="40,30,40,20">
            <TextBlock 
                Text="Intel NUC Software Studio" 
                FontSize="28" 
                FontWeight="Light"
                Foreground="White"/>
            <TextBlock 
                Text="Manage your Intel NUC system settings" 
                FontSize="14" 
                Foreground="#FF8A9BA8"
                Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="40,20,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- LEDs Section -->
            <Border Grid.Column="0" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    Padding="30"
                    BorderBrush="#FF3A4A57"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <!-- Header with Button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE706;" FontSize="20" Foreground="#FFE6B800"/>
                            <TextBlock Text="LEDs" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1"
                               x:Name="LedsButton"
                               Content="Manage LEDs" 
                               Click="OnLedsClicked"
                               Background="#FF0078D4"
                               Foreground="White"
                               Padding="12,6"
                               CornerRadius="4"
                               BorderThickness="0"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    </Grid>
                    
                    <!-- NUC Device Views -->
                    <Grid Height="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Top row - perspective views -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                Background="#FF1E2832" 
                                CornerRadius="4" 
                                Margin="2">
                            <Rectangle Fill="#FF444444" 
                                     Width="60" Height="40"
                                     RadiusX="2" RadiusY="2"/>
                        </Border>
                        
                        <Border Grid.Row="0" Grid.Column="1" 
                                Background="#FF1E2832" 
                                CornerRadius="4" 
                                Margin="2">
                            <Rectangle Fill="#FF444444" 
                                     Width="60" Height="40"
                                     RadiusX="2" RadiusY="2"/>
                        </Border>
                        
                        <Border Grid.Row="0" Grid.Column="2" 
                                Background="#FF1E2832" 
                                CornerRadius="4" 
                                Margin="2">
                            <Rectangle Fill="#FF444444" 
                                     Width="60" Height="40"
                                     RadiusX="2" RadiusY="2"/>
                        </Border>
                    </Grid>
                    
                    <!-- Effects Toggle -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                  Text="Effects:" 
                                  FontSize="13" 
                                  Foreground="#FF8A9BA8"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        
                        <ToggleSwitch Grid.Column="1" 
                                     x:Name="EffectsToggle"
                                     OnContent="ON" 
                                     OffContent="OFF"
                                     IsOn="True"
                                     Foreground="#FF8A9BA8"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Arrow 1 -->
            <FontIcon Grid.Column="1" 
                     Glyph="&#xE76C;" 
                     FontSize="24" 
                     Foreground="#FF0078D4"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="20,0"/>
            
            <!-- Performance Section -->
            <Border Grid.Column="2" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    Padding="30"
                    BorderBrush="#FF3A4A57"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <!-- Header with Button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7C4;" FontSize="20" Foreground="#FF16C60C"/>
                            <TextBlock Text="Performance Mode" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1"
                               x:Name="PerformanceButton"
                               Content="Performance Settings" 
                               Click="OnPerformanceClicked"
                               Background="#FF16C60C"
                               Foreground="White"
                               Padding="12,6"
                               CornerRadius="4"
                               BorderThickness="0"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    </Grid>
                    
                    <!-- CPU Sub-Card -->
                    <Border Background="#FF1E2832" 
                            CornerRadius="6"
                            Padding="20"
                            BorderBrush="#FF2A3441"
                            BorderThickness="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="CPU" 
                                      FontSize="13" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Max Performance" 
                                      FontSize="11" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            
                            <!-- CPU Gauge -->
                            <controls:CircularGauge x:Name="MainCpuGauge"
                                                   Width="80" 
                                                   Height="80"
                                                   Value="20" 
                                                   Maximum="100"
                                                   Unit="Â°C"
                                                   StrokeColor="#FFFF8C00"
                                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fan Sub-Card -->
                    <Border Background="#FF1E2832" 
                            CornerRadius="6"
                            Padding="20"
                            BorderBrush="#FF2A3441"
                            BorderThickness="1">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Fan" 
                                      FontSize="13" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Balanced" 
                                      FontSize="11" 
                                      Foreground="#FF8A9BA8"
                                      HorizontalAlignment="Center"/>
                            
                            <!-- Fan Info -->
                            <StackPanel Spacing="6" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="12" Foreground="#FF8A9BA8"/>
                                    <TextBlock Text="CPU Fan: 1991 RPM" 
                                              FontSize="10" 
                                              Foreground="#FF8A9BA8"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="12" Foreground="#FF8A9BA8"/>
                                    <TextBlock Text="System Fan 1: 903 RPM" 
                                              FontSize="10" 
                                              Foreground="#FF8A9BA8"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="12" Foreground="#FF8A9BA8"/>
                                    <TextBlock Text="System Fan 2: 949 RPM" 
                                              FontSize="10" 
                                              Foreground="#FF8A9BA8"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Arrow 2 -->
            <FontIcon Grid.Column="3" 
                     Glyph="&#xE76C;" 
                     FontSize="24" 
                     Foreground="#FF0078D4"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="20,0"/>
            
            <!-- System Monitor Section -->
            <Border Grid.Column="4" 
                    Background="#FF2A3441" 
                    CornerRadius="8"
                    Padding="30"
                    BorderBrush="#FF3A4A57"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <!-- Header with Button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7F4;" FontSize="20" Foreground="#FFFF8C00"/>
                            <TextBlock Text="System Monitor" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1"
                               x:Name="SystemMonitorButton"
                               Content="View System Status" 
                               Click="OnSystemMonitorClicked"
                               Background="#FFFF8C00"
                               Foreground="White"
                               Padding="12,6"
                               CornerRadius="4"
                               BorderThickness="0"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    </Grid>
                    
                    <!-- System Information Sub-Card -->
                    <Border Background="#FF1E2832" 
                            CornerRadius="6"
                            Padding="20"
                            BorderBrush="#FF2A3441"
                            BorderThickness="1">
                        <StackPanel Spacing="6">
                            <TextBlock Text="System Model: NUC11BTMi9" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="System Manufacturer: Intel(R) Client Systems" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="BIOS Version: DBTGL579.0073.2024.1111.1926" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="System SKU: RNUC11BTMi90000" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="Embedded Controller Version: 3.5" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="System Version: M26263-403" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="BaseBoard Version: M17026-403" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="CPU: 11th Gen Intel(R) Core(TM) i9-11900KB @ 3.30GHz" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="iGPU: Intel(R) UHD Graphics" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                            <TextBlock Text="dGPU: NVIDIA GeForce RTX 3060" 
                                      FontSize="10" 
                                      Foreground="#FF8A9BA8"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Performance Gauges - Single Viewbox for unified scaling -->
                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                        <Grid Width="480" Height="240">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- CPU Gauge Card -->
                            <Border Grid.Row="0" Grid.Column="0" 
                                    Background="Transparent" 
                                    Margin="10">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="CPU" 
                                              FontSize="12" 
                                              Foreground="#FF8A9BA8"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemCpuGauge"
                                                           Width="80" 
                                                           Height="80"
                                                           Value="20" 
                                                           Maximum="100"
                                                           Unit="Â°C"
                                                           StrokeColor="#FFFF8C00"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- dGPU Gauge Card -->
                            <Border Grid.Row="0" Grid.Column="1" 
                                    Background="Transparent" 
                                    Margin="10">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="dGPU" 
                                              FontSize="12" 
                                              Foreground="#FF8A9BA8"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemGpuGauge"
                                                           Width="80" 
                                                           Height="80"
                                                           Value="5" 
                                                           Maximum="100"
                                                           Unit="Â°C"
                                                           StrokeColor="#FF16C60C"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Empty slot for balance -->
                            <Border Grid.Row="0" Grid.Column="2" 
                                    Background="Transparent" 
                                    Margin="10">
                            </Border>
                            
                            <!-- Memory Gauge Card -->
                            <Border Grid.Row="1" Grid.Column="0" 
                                    Background="Transparent" 
                                    Margin="10">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Memory" 
                                              FontSize="12" 
                                              Foreground="#FF8A9BA8"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemMemoryGauge"
                                                           Width="80" 
                                                           Height="80"
                                                           Value="46" 
                                                           Maximum="100"
                                                           Unit=""
                                                           StrokeColor="#FF0078D4"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Storage Gauge Card -->
                            <Border Grid.Row="1" Grid.Column="1" 
                                    Background="Transparent" 
                                    Margin="10">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Storage" 
                                              FontSize="12" 
                                              Foreground="#FF8A9BA8"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemStorageGauge"
                                                           Width="80" 
                                                           Height="80"
                                                           Value="92" 
                                                           Maximum="100"
                                                           Unit=""
                                                           StrokeColor="#FFFF8C00"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- System Temperature Gauge Card -->
                            <Border Grid.Row="1" Grid.Column="2" 
                                    Background="Transparent" 
                                    Margin="10">
                                <StackPanel Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="System" 
                                              FontSize="12" 
                                              Foreground="#FF8A9BA8"
                                              HorizontalAlignment="Center"/>
                                    <controls:CircularGauge x:Name="MainSystemTempGauge"
                                                           Width="80" 
                                                           Height="80"
                                                           Value="46" 
                                                           Maximum="100"
                                                           Unit="Â°C"
                                                           StrokeColor="#FF16C60C"
                                                           HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Viewbox>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
